<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mx.badcalculator.MainActivity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="id/tv1"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:text="id/tv2" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="256dp"
        android:id="@+id/keypad"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true">

        <Button
            android:text="5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt5"
            android:layout_alignBottom="@+id/bt4"
            android:layout_toRightOf="@+id/bt4"
            android:layout_toEndOf="@+id/bt4"
            android:layout_below="@+id/bt7" />

        <Button
            android:text="6"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt6"
            android:layout_alignBottom="@+id/bt5"
            android:layout_toRightOf="@+id/bt5"
            android:layout_toEndOf="@+id/bt5"
            android:layout_alignTop="@+id/bt5" />

        <Button
            android:text="8"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt8"
            android:layout_above="@+id/bt4"
            android:layout_toRightOf="@+id/bt7"
            android:layout_toEndOf="@+id/bt7" />

        <Button
            android:text="9"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt9"
            android:layout_above="@+id/bt6"
            android:layout_toRightOf="@+id/bt5"
            android:layout_toEndOf="@+id/bt5" />

        <Button
            android:text="C"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:id="@+id/btClear"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bt9"
            android:layout_toEndOf="@+id/bt9" />

        <Button
            android:text="/"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btDiv"
            android:layout_below="@+id/btClear"
            android:layout_toRightOf="@+id/bt6"
            android:layout_toEndOf="@+id/bt6" />

        <Button
            android:text="x"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btMul"
            android:layout_below="@+id/btClear"
            android:layout_toRightOf="@+id/btDiv"
            android:layout_toEndOf="@+id/btDiv" />

        <Button
            android:text="2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt2"
            android:layout_above="@+id/bt0"
            android:layout_toRightOf="@+id/bt1"
            android:layout_toEndOf="@+id/bt1" />

        <Button
            android:text="3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt3"
            android:layout_above="@+id/bt0"
            android:layout_toRightOf="@+id/bt2"
            android:layout_toEndOf="@+id/bt2" />

        <Button
            android:text="+"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btPlu"
            android:layout_below="@+id/btMul"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="="
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:id="@+id/btEq"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="0"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:id="@+id/bt0"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="."
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btDot"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/bt2"
            android:layout_toEndOf="@+id/bt2" />

        <Button
            android:text="-"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/btMin"
            android:layout_alignBottom="@+id/bt3"
            android:layout_toRightOf="@+id/bt6"
            android:layout_toEndOf="@+id/bt6"
            android:layout_below="@+id/bt6" />

        <Button
            android:text="4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt4"
            android:layout_above="@+id/bt2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="7"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/bt1"
            android:layout_below="@+id/bt5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
