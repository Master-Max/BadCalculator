<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mx.badcalculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="256dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <RelativeLayout
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_below="@+id/editText"
            android:layout_marginTop="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:text="7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:id="@+id/num7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num8"
                android:layout_alignBaseline="@+id/num7"
                android:layout_alignBottom="@+id/num7"
                android:layout_toRightOf="@+id/num7"
                android:layout_toEndOf="@+id/num7" />

            <Button
                android:text="9"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num9"
                android:layout_alignBaseline="@+id/num8"
                android:layout_alignBottom="@+id/num8"
                android:layout_toRightOf="@+id/num8"
                android:layout_toEndOf="@+id/num8" />

            <Button
                android:text="4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num4"
                android:layout_below="@+id/num7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num1"
                android:layout_below="@+id/num4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num5"
                android:layout_below="@+id/num8"
                android:layout_toRightOf="@+id/num4"
                android:layout_toEndOf="@+id/num4" />

            <Button
                android:text="6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num6"
                android:layout_below="@+id/num9"
                android:layout_toRightOf="@+id/num5"
                android:layout_toEndOf="@+id/num5" />

            <Button
                android:text="3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num3"
                android:layout_below="@+id/num6"
                android:layout_toRightOf="@+id/num2"
                android:layout_toEndOf="@+id/num2" />

            <Button
                android:text="2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/num2"
                android:layout_below="@+id/num5"
                android:layout_toRightOf="@+id/num1"
                android:layout_toEndOf="@+id/num1" />

            <Button
                android:text="C"
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:id="@+id/btC"
                android:layout_alignBaseline="@+id/num9"
                android:layout_alignBottom="@+id/num9"
                android:layout_toRightOf="@+id/num9"
                android:layout_alignRight="@+id/btMul"
                android:layout_alignEnd="@+id/btMul" />

            <Button
                android:text="/"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btDiv"
                android:layout_alignBaseline="@+id/num6"
                android:layout_alignBottom="@+id/num6"
                android:layout_toRightOf="@+id/num6"
                android:layout_toEndOf="@+id/num6" />

            <Button
                android:text="x"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btMul"
                android:layout_alignBaseline="@+id/btDiv"
                android:layout_alignBottom="@+id/btDiv"
                android:layout_toRightOf="@+id/btDiv"
                android:layout_toEndOf="@+id/btDiv" />

            <Button
                android:text="-"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btMin"
                android:layout_below="@+id/btDiv"
                android:layout_toRightOf="@+id/num6"
                android:layout_toEndOf="@+id/num6" />

            <Button
                android:text="+"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btPs"
                android:layout_below="@+id/btMul"
                android:layout_toRightOf="@+id/btDiv"
                android:layout_toEndOf="@+id/btDiv" />

            <Button
                android:text="="
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:id="@+id/btEq"
                android:layout_below="@+id/btMin"
                android:layout_toRightOf="@+id/num3"
                android:layout_alignRight="@+id/btPs"
                android:layout_alignEnd="@+id/btPs" />

            <Button
                android:text="0"
                android:layout_width="96dp"
                android:id="@+id/num0"
                android:layout_height="48dp"
                android:layout_below="@+id/num1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="."
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/numDt"
                android:layout_alignBaseline="@+id/btEq"
                android:layout_alignBottom="@+id/btEq"
                android:layout_toRightOf="@+id/num0"
                android:layout_toEndOf="@+id/num0" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
